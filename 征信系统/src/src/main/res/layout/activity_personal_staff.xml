<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_staff1_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下属一"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_reviewed_staff1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="评价"
            android:textSize="24sp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_staff2_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下属二"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_reviewed_staff2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="评价"
            android:textSize="24sp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_staff3_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下属三"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_reviewed_staff3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="评价"
            android:textSize="24sp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_staff4_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下属四"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_reviewed_staff4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="评价"
            android:textSize="24sp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>